{{#section 'css'}}
    <link rel="stylesheet" href="/css/manager.css">
    
{{/section}}

<div class="row">
        <div class="col-md-2 pl-5">
            <div>
                Chào bạn
                <span class="font-weight-bold">{{layoutVM.curUser.f_Name}}</span>
            </div>
            <ul class="dropdown-menu menu">
                <li class="active">
                    <a href="./info.html">
                        <i class="fa fa-user-circle fa-lg" aria-hidden="true"></i>
                        <span>Thông tin tài khoản</span>
                    </a>
                </li>
                <li>
                    <a href="./listorder.html">
                        <i class="fa fa-shopping-cart fa-lg" aria-hidden="true"></i>
                        <span>Quản lý giỏ hàng</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-map-marker fa-lg" aria-hidden="true"></i>&nbsp;&nbsp;
                        <span>Địa chỉ thanh toán</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-credit-card-alt" aria-hidden="true"></i>
                        <span>Thông tin thanh toán</span>
                    </a>
                </li>
                <li>
                    <a href="./history.html">
                        <i class="fa fa-history fa-lg" aria-hidden="true"></i>&nbsp;
                        <span>Lịch sử mua hàng</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-heart fa-lg" aria-hidden="true"></i>
                        <span>Sản phẩm yêu thích</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-star-half-o fa-lg" aria-hidden="true"></i>
                        <span>Nhận xét của tôi</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-md-10 pr-5">
            Thông tin tài khoản
            <br>
            <form class="pl-3 bg-white pb-3 mb-3">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="inputFirstName">Tên đăng nhập</label>
                        <input type="text" class="form-control" id="inputFirstName" placeholder="{{layoutVM.curUser.f_Username}}" aria-describedby="firstNameHelpBlock">
                        <small id="firstNameHelpBlock" class="form-text text-muted">
                            Vui lòng nhập thông tin này
                        </small>
                    </div>
                    <div class="form-group col-md-4 offset-md-2">
                        <label for="inputLastName">Họ Tên</label>
                        <input type="text" class="form-control" id="inputLastName" placeholder="{{layoutVM.curUser.f_Name}}" aria-describedby="lastNameHelpBlock">
                        <small id="lastNameHelpBlock" class="form-text text-muted">
                            Vui lòng nhập thông tin này
                        </small>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="selectGender">Giới tính</label>
                        <select class="form-control" id="selectGender" aria-describedby="genderHelpBlock">
                            <option>Nam</option>
                            <option>Nữ</option>
                        </select>
                        <small id="genderHelpBlock" class="form-text text-muted">
                            Vui lòng nhập thông tin này
                        </small>
                    </div>
                    <div class="form-group col-md-4 offset-md-2">
                        <label for="inputDateofBirth">Ngày sinh</label>
                        <input type="date" class="form-control" id="inputDateofBirth" aria-describedby="dateofBirthHelpBlock">
                        <small id="dateofBirthHelpBlock" class="form-text text-muted">
                            Vui lòng nhập thông tin này
                        </small>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="email">Emạil</label>
                        <input type="email" class="form-control" id="email" placeholder="{{layoutVM.curUser.f_Email}}">
                    </div>
                    <div class="form-group col-md-4 offset-md-2">
                        <label for="inputAddress">Địa chỉ</label>
                        <input type="text" class="form-control" id="inputAddress">
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-primary">Cập nhật</button>
            </form>
            Liên kết mạng xã hội
            <ul class="list-group">
                <li class="list-group-item">
                    <a href="#">
                        <i class="fa fa-facebook social"></i>
                    </a>
                    <span class="font-weight-bold">Facebook</span>
                </li>
                <li class="list-group-item">
                    <a href="#">
                        <i class="fa fa-google social"></i>
                    </a>
                    <span class="font-weight-bold">Google</span>
                </li>
            </ul>
        </div>
    </div>