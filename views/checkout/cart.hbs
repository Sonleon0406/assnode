{{#section 'js'}}
    <script>
        $(".btn-down").click(function(){
            var value = parseInt($("#qty").attr('value'));
            var min = parseInt($("#qty").attr('min'));
            if (value > min) {
                value--;
                $("#qty").attr('value', value);
            }
        });

        $(".btn-up").click(function(){
            var value = parseInt($("#qty").attr('value'));
            var max = parseInt($("#qty").attr('max'));
            if (value < max) {
                value++;
                $("#qty").attr('value', value);
            } //
        });
    </script>
{{/section}}




<div class="row product product-bottom">
    <div class="col-12 col-sm-8">
        <div class="row">
            <div class="col">
                
                <a href="/home"> << Mua thêm sản phẩm khác</a>
            </div>
            <div class="col text-right">
                <a>GIỎ HÀNG</a>
            </div>
        </div>
        <ul class="nav nav-tabs"></ul>
        <div class="col-md-12 border mt-2">
            {{!-- <a href="/product/detail/{{ProID}}" style="background-image: url(/img/{{ProID}}/thumbnail.jpg);" class="col-4 image"></a> --}}
            <div class="row">
                <div class="col-3">
                    <img src="./img/1/thumbnail.jpg" class="img-fluid" alt="" width="120px" heigth="120px" />
                    
                </div>
